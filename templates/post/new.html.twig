{% extends "base.html.twig" %}

{% block title %}
New Post
!{% endblock %}


{% block stylesheets %}
{{ parent() }}

<link rel="stylesheet" type="text/css" media="screen" href="{{ asset('dist/css/post_new.css') }}">
!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-lg-10 mx-auto">
            <div class="card card-post my-5">
                <div class="card-body">
                    <div class="card my-5">
                        <div class="card-header">
                            <h5 class="card-title text-center">New post for user: <span id="user-name"></span></h5>
                        </div>
                        <div class="card-body">
                            <form id="new-post-form" onsubmit="handleSubmit(event);">
                            <div class="row my-4">
                                <div class="col-sm-10 col-md-10 col-8-10 mx-auto">
                                    <div class="form-label-group">
                                        <label for="title">Please enter the title:</label>
                                        <input type="text" class="form-control" name="title" style="minWidth:50%" value="" placeholder="Title" required autofocus>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-4">
                                <div class="col-sm-10 col-md-10 col-8-10 mx-auto">
                                    <div class="form-label-group">
                                        <label for="content">Please enter the content:</label>
                                        <textarea rows="5" class="form-control" name="content" placeholder="Content" required></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row my-4">
                                <div class="col-sm-10 col-md-10 col-8-10 mx-auto">
                                    <button class="btn text-white bg-primary text-uppercase float-right" type="submit">Save</button>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
!{% endblock %}

{% block javascripts %}
{{ parent() }}

<script src="{{ asset('dist/js/post_new.js') }}"></script>
!{% endblock %}

